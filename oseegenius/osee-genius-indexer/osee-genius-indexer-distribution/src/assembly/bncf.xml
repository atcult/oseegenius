<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bncf</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/solr-configuration/bncf</directory>
			<outputDirectory>/bncf</outputDirectory>
			<excludes>
				<exclude>**/customer-index-configuration.properties</exclude>
			</excludes>			
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/solr-configuration/shared</directory>
			<outputDirectory>/bncf</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>				
	</fileSets>	
	<moduleSets>
		<moduleSet>
			<includeSubModules>true</includeSubModules>
			<includes>
				<include>*:osee-genius-indexer-biblio</include>
			</includes>
			<binaries>
				<outputDirectory>/bncf/lib/</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>true</includeDependencies>
				<dependencySets>
          			<dependencySet>
          			<useTransitiveDependencies>true</useTransitiveDependencies>
						<outputDirectory>/bncf/lib/</outputDirectory>
						<includes>
							<include>*</include>
						</includes>
          			</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>			
	</moduleSets>
</assembly>