      		        <str name="qt">author_bc</str>
      		        <str name="sort">title_sort asc, author_sort asc, publication_date_sort desc</str> 
				</lst>				
      		    <lst>
      		        <str name="q">italia</str> 
      		        <str name="qt">sub_bc</str>
      		        <str name="sort">title_sort asc, author_sort asc, publication_date_sort desc</str> 
				</lst>				
			</arr>
		</listener>
