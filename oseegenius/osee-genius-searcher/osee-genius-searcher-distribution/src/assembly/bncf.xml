<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bncf</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/solr-configuration/bncf</directory>
			<outputDirectory>/bncf</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>	
		<fileSet>
			<directory>${project.basedir}/src/solr-configuration/shared</directory>
			<outputDirectory>/bncf</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>	
		<fileSet>
			<directory>${project.basedir}/src/pz2-configuration/bncf</directory>
			<outputDirectory>/pz2-bncf</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/pz2-configuration/shared</directory>
			<outputDirectory>/pz2-bncf</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>		
	</fileSets>	
	<moduleSets>		
		<moduleSet>
			<includes>
				<include>*:osee-genius-searcher-core</include>
				<include>*:osee-genius-searcher-holdings</include>
				<!-- <include>*:osee-genius-searcher-holdings-amicus</include> -->
				<include>*:osee-genius-searcher-browsing</include>
			</includes>
			<binaries>
				<outputDirectory>/bncf/lib/</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>					
	</moduleSets>
</assembly>