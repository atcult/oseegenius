<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>casalini</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/database</directory>
			<outputDirectory>/sql-scripts</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>		
		<fileSet>
			<directory>${project.basedir}/../osee-genius-web-app/overrides/casalini</directory>
			<outputDirectory>/casalini</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>	
		<fileSet>
			<directory>${project.basedir}/../osee-genius-web-app/src/main/webapp</directory>
			<outputDirectory>/casalini</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../osee-genius-web-app/src/main/resources</directory>
			<outputDirectory>/casalini/WEB-INF/classes</outputDirectory>
		</fileSet>		
	</fileSets>	
	<moduleSets>
		<moduleSet>
			<includes>
				<include>*:osee-genius-web-casalini</include>
			</includes>
			<binaries>
				<includeDependencies>true</includeDependencies>
				<outputDirectory>/casalini/WEB-INF/lib/</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>		
		<moduleSet>
			<includes>
				<include>*:osee-genius-web-amicus-plugins</include>
				<include>*:osee-genius-web-xpf</include>
			</includes>
			<binaries>
				<dependencySets>
					<dependencySet>
						<useTransitiveDependencies>false</useTransitiveDependencies>
						<includes></includes>
					</dependencySet>
				</dependencySets>
				<outputDirectory>/casalini/WEB-INF/lib/</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>						
	</moduleSets>
</assembly>